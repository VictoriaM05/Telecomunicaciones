#include <WiFi.h>
#include <esp_now.h>
#include <Adafruit_NeoPixel.h>

// ====== LED RGB INTERNO ======
#define LED_PIN   48      // PIN RGB ESP32-S3 (com√∫n)
#define LED_COUNT 1

Adafruit_NeoPixel rgb(LED_COUNT, LED_PIN, NEO_GRB + NEO_KHZ800);

// ====== ESTRUCTURA DE DATOS ======
typedef struct struct_message {
  int valor;   // 1=R, 2=G, 3=B, 4=W
} struct_message;

struct_message datosRecibidos;

// ====== FUNCION COLOR ======
void mostrarColor(int valor) {
  rgb.clear();

  switch (valor) {
    case 1: rgb.setPixelColor(0, rgb.Color(255, 0, 0)); break;   // Rojo
    case 2: rgb.setPixelColor(0, rgb.Color(0, 255, 0)); break;   // Verde
    case 3: rgb.setPixelColor(0, rgb.Color(0, 0, 255)); break;   // Azul
    case 4: rgb.setPixelColor(0, rgb.Color(255, 255, 255)); break; // Blanco
  }

  rgb.show();
}

// ====== CALLBACK ESP-NOW ======
void OnDataRecv(const esp_now_recv_info *info,
                const uint8_t *incomingData,
                int len) {

  if (len != sizeof(datosRecibidos)) return;

  memcpy(&datosRecibidos, incomingData, sizeof(datosRecibidos));

  Serial.print("Color recibido: ");
  Serial.println(datosRecibidos.valor);

  mostrarColor(datosRecibidos.valor);
}

void setup() {
  Serial.begin(115200);

  // LED RGB
  rgb.begin();
  rgb.clear();
  rgb.show();

  // WiFi
  WiFi.mode(WIFI_STA);

  // ESP-NOW
  if (esp_now_init() != ESP_OK) {
    Serial.println("Error ESP-NOW");
    return;
  }

  esp_now_register_recv_cb(OnDataRecv);

  Serial.println("Receptor listo (LED RGB interno)");
}

void loop() {}
